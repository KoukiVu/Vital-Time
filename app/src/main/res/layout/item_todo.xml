<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:padding="8dp">


    <CheckBox
            android:id="@+id/todo_checkbox"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
    <TextView
            android:id="@+id/todo_title"
            android:layout_width="188dp"
            android:layout_height="36dp"
            android:text="Todo Title"

            app:layout_constraintStart_toEndOf="@+id/todo_checkbox"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"/>
    <Button
            android:id="@+id/todo_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Finished Todo"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/seekBar2"
            app:layout_constraintStart_toEndOf="@+id/todo_title" app:layout_constraintEnd_toEndOf="@+id/todo_title"
            app:layout_constraintTop_toTopOf="@+id/todo_title"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.529"/>
    <ProgressBar
            android:layout_width="206dp"
            android:layout_height="21dp" android:id="@+id/seekBar2"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_marginTop="8dp"
            android:progressTint="#AD3030"
            app:layout_constraintTop_toBottomOf="@+id/todo_title"
            app:layout_constraintStart_toStartOf="@+id/todo_title" app:layout_constraintEnd_toEndOf="@+id/todo_title"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="86dp"
            android:layout_height="52dp"
            app:layout_constraintStart_toEndOf="@+id/todo_title" app:layout_constraintTop_toTopOf="@+id/todo_title"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"

    >
        <TextView
                android:id="@+id/todo_hours"

                android:layout_width="32dp"
                android:layout_height="40dp"

        />
        <TextView
                android:text=":"
                android:layout_width="7dp"
                android:layout_height="29dp" android:id="@+id/todo_semicolon"

        />
        <TextView

                android:layout_width="31dp"
                android:layout_height="38dp" android:id="@+id/todo_minutes"
        />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>