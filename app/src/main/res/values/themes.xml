    <style name="CalendarWeekDayTextAppearance.Light" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="CalendarWeekDayTextAppearance.Dark" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/darkText</item>
    </style>
    <style name="CalendarWeekDayTextAppearance.Pastel" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/pastelText</item>
    </style>
    <style name="CalendarWeekDayTextAppearance.Coffee" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/coffeeText</item>
    </style>
    <style name="CalendarWeekDayTextAppearance.Midnight" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/midnightText</item>
    </style>


    <!-- Dialog Themes -->
    <style name="VitalTime.Light.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="background">@color/lightBase</item>
        <item name="cardViewStyle">@style/VitalTime.Light.Card</item>
    </style>

    <style name="VitalTime.Dark.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/darkBase</item>
