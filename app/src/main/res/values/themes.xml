        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
    </style>
    <style name="VitalTime.Coffee.Text" parent="Widget.MaterialComponents.TextView">
        <item name="background">@android:color/transparent</item>
        <item name="android:textColor">@color/coffeeText</item>
    </style>

    <style name="VitalTime.Midnight.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/midnightSecondary</item>
        <item name="android:textViewStyle">@style/VitalTime.Midnight.Text</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
    </style>
    <style name="VitalTime.Midnight.Text" parent="Widget.MaterialComponents.TextView">
