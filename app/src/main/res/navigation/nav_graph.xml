<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/moodAndJournal"
        android:name="com.example.vitaltime.moodAndJournal"
        android:label="Diary"
        tools:layout="@layout/mood_journal">
        <action android:id="@+id/action_moodAndJournal_to_journalHome" app:destination="@id/journalHome"/>
    </fragment>
    <fragment android:id="@+id/journalHome" android:name="com.example.vitaltime.JournalHome"
              android:label="Diary" tools:layout="@layout/fragment_journal_home">
        <action android:id="@+id/action_journalHome_to_moodAndJournal" app:destination="@id/moodAndJournal"/>
    </fragment>
    <fragment android:id="@+id/loginFragment"
              android:name="com.example.vitaltime.Login.LoginFragment"
              android:label="Login"
              tools:layout="@layout/fragment_login">
        <action android:id="@+id/action_loginFragment_to_resetPasswordFragment"
                app:destination="@id/resetPasswordFragment"/>
        <action android:id="@+id/action_loginFragment_to_homeFragment" app:destination="@id/homeFragment"/>
        <action android:id="@+id/action_loginFragment_to_signinFragment" app:destination="@id/signinFragment"/>
    </fragment>
    <fragment android:id="@+id/signinFragment"
              android:name="com.example.vitaltime.Login.SigninFragment"
              android:label="Create Account"
              tools:layout="@layout/fragment_signin"/>
    <fragment android:id="@+id/resetPasswordFragment" android:name="com.example.vitaltime.Login.ResetPasswordFragment"
              android:label="Reset Password" tools:layout="@layout/fragment_reset_password"/>
    <fragment android:id="@+id/homeFragment" android:name="com.example.vitaltime.HomeFragment"
              android:label="Home" tools:layout="@layout/fragment_home">
        <action android:id="@+id/action_homeFragment_to_journalHome" app:destination="@id/journalHome"/>
        <action android:id="@+id/action_homeFragment_to_toDoFragment" app:destination="@id/toDoFragment"/>
    </fragment>
    <fragment android:id="@+id/toDoFragment" android:name="com.example.vitaltime.ToDoFragment"
              android:label="Tasks" tools:layout="@layout/fragment_todo">
        <action android:id="@+id/action_toDoFragment_to_homeFragment" app:destination="@id/homeFragment"/>
    </fragment>
    <fragment android:id="@+id/accountFragment" android:name="com.example.vitaltime.AccountFragment"
              android:label="Account" tools:layout="@layout/fragment_account"/>
</navigation>