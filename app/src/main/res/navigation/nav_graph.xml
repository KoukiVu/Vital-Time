<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/loginFragment">

    <fragment
            android:id="@+id/FirstFragment"
            android:name="com.example.vitaltime.FirstFragment"
            android:label="@string/first_fragment_label"
            tools:layout="@layout/fragment_first">

        <action
                android:id="@+id/action_FirstFragment_to_SecondFragment"
                app:destination="@id/SecondFragment"/>
    </fragment>
    <fragment
            android:id="@+id/SecondFragment"
            android:name="com.example.vitaltime.SecondFragment"
            android:label="@string/second_fragment_label"
            tools:layout="@layout/fragment_second">

        <action
                android:id="@+id/action_SecondFragment_to_FirstFragment"
                app:destination="@id/FirstFragment"/>
    </fragment>
    <fragment android:id="@+id/loginFragment"
              android:name="com.example.vitaltime.Login.LoginFragment"
              android:label="Login"
              tools:layout="@layout/fragment_login"/>
    <fragment android:id="@+id/signinFragment"
              android:name="com.example.vitaltime.Login.SigninFragment"
              android:label="Create Account"
              tools:layout="@layout/fragment_signin"/>
</navigation>